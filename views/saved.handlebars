<h1>Saved Articles</h1>

<div class="containter">
    

    <div id="commentModal" class="modal">
        <div class="modal-content">
            <h4>Comments for Article: </h4>
            <div>
                <ul class="collection">
                    {{#each dbArticle}}

                        {{#each comment}}
                            {{> comment}}
                        {{/each}}
                    {{/each}}
                </ul>
            </div>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12 m6">
                            <input id="newCommentAuthor" type="text" class="validate">
                            <label for="newCommentAuthor">Author</label>
                        </div>
                        <div class="input-field col s12 m6">
                            <input id="newCommentTitle" type="text" class="validate">
                            <label for="newCommentTitle">Title</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="newComment" type="text" class="validate">
                            <label for="newComment">New Comment</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <a class="modal-close waves-effect waves-green btn-flat">Close</a>
            <a id="newCommentBtn" class="waves-effect waves-green btn-flat">Save Comment</a>
        </div>
    </div>




    {{#each dbArticle}}
        {{> saved-card}}
    {{/each}}
</div>